				<button type="button" class="flash-cell" role="listitem" aria-label="View flash design" data-caption="Coming soon"><span class="flash-placeholder">Coming soon</span></button>
				<button type="button" class="flash-cell" role="listitem" aria-label="View flash design" data-caption="Coming soon"><span class="flash-placeholder">Coming soon</span></button>
				<button type="button" class="flash-cell" role="listitem" aria-label="View flash design" data-caption="Coming soon"><span class="flash-placeholder">Coming soon</span></button>
				<button type="button" class="flash-cell" role="listitem" aria-label="View flash design" data-caption="Coming soon"><span class="flash-placeholder">Coming soon</span></button>
