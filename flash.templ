			</div>
		</div>
		<div id="flash-modal" class="flash-modal" role="dialog" aria-modal="true" aria-label="Flash design" hidden>
			<div class="flash-modal-backdrop" aria-hidden="true"></div>
			<div class="flash-modal-inner">
				<button type="button" class="flash-modal-close" aria-label="Close">Ã—</button>
				<div class="flash-modal-image">
					<span class="flash-placeholder">Coming soon</span>
				</div>
				<p id="flash-modal-caption" class="flash-modal-caption">Coming soon</p>
			</div>
		</div>
		<script>
			(function() {
				var modal = document.getElementById('flash-modal');
				var captionEl = document.getElementById('flash-modal-caption');
				if (!modal || !captionEl) return;
				function openModal(caption) {
					captionEl.textContent = caption || 'Coming soon';
					modal.removeAttribute('hidden');
					document.body.style.overflow = 'hidden';
				}
				function closeModal() {
					modal.setAttribute('hidden', '');
					document.body.style.overflow = '';
				}
				document.querySelectorAll('.flash-cell').forEach(function(btn) {
					btn.addEventListener('click', function() { openModal(this.getAttribute('data-caption')); });
				});
				modal.querySelector('.flash-modal-backdrop').addEventListener('click', closeModal);
				modal.querySelector('.flash-modal-close').addEventListener('click', closeModal);
				document.addEventListener('keydown', function(e) { if (e.key === 'Escape') closeModal(); });
			})();
		</script>
	}
}
